<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kim.android.MobileBanking.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                app:cardBackgroundColor="#7890">

                <com.kim.android.MobileBanking.GraphicOverlay
                    android:id="@+id/graphic_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.camera.view.PreviewView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/facw"/>



        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detection_text"
                android:layout_width="279dp"
                android:layout_height="26dp"
                android:layout_marginHorizontal="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.183" />

            <androidx.cardview.widget.CardView
                android:id="@+id/preview_img_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/add_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detection_text">

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:contentDescription="@string/register_face"
                android:text="Register Face"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detection_text"
                app:layout_constraintVertical_bias="0.303" />

            <ImageView
                android:id="@+id/preview_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedcorner"
                android:contentDescription="@string/preview_photo"
                android:scaleType="centerInside"
                android:src="@drawable/outline_image_24"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/add_btn"
                app:layout_constraintHorizontal_bias="0.525"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detection_text"
                app:layout_constraintVertical_bias="0.7" />

        </LinearLayout>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>